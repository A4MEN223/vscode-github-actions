{
	"name": "vscode-github-actions",
	"displayName": "vscode-github-actions",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:actionsExplorer",
		"onCommand:explorer.refresh"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "explorer.refresh",
				"title": "Refresh",
				"icon": {
					"dark": "resources/icons/dark/refresh.svg",
					"light": "resources/icons/light/refresh.svg"
				}
			},
			{
				"command": "explorer.openRun",
				"title": "Open workflow run"
			}
		],
		"views": {
			"actions-explorer": [
				{
					"id": "actionsExplorer",
					"name": "Workflows"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "actions-explorer",
					"title": "GitHub Actions",
					"icon": "resources/icons/light/explorer.svg"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "explorer.refresh",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"@octokit/rest": "^16.35.2"
	}
}